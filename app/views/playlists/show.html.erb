<h1>Songs on Playlist</h1>

<p><%= @playlist.name %></p>

<% @playlist.songs.each do |song| %>
    <p>
        Title:<%= song.title %>
        <br>
        Artist:<%= song.artist %> 
    </p>
<% end %>


    <% if @playlist.user_id == current_user.id%>
        <li><%= link_to "Add Songs to Playlist", new_playlist_song_path(@playlist) %></li>
        <%= button_to "Delete", @playlist, method: :delete %>
    <% end%>


